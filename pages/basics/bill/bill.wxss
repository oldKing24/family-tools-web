/* 引入 ColorUI 样式 */
@import "/colorui/main.wxss";

.container {
  padding-bottom: 100rpx;
}

.records {
  padding: 20rpx;
}

.date-group {
  margin-bottom: 30rpx;
}

.date-header {
  padding: 10rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 10rpx;
  text-align: center;
}

.record-card {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.record-header {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}

.record-date {
  color: #888;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.income {
  color: #4caf50;
}

.expense {
  color: #f44336;
}

.add-button {
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 20rpx;
  color: #fff;
  font-size: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.close {
  font-size: 36rpx;
  cursor: pointer;
}

.modal-body {
  padding: 20rpx;
}

.input {
  width: 100%;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.modal-footer {
  padding: 20rpx;
}

.chart-container {
  width: 100%;
  height: 300px;
  margin-top: 20px;
  position: relative;
}

